{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": true,
        "removeComments": false,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": false,
        "target": "ESNext",
        "strict": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}